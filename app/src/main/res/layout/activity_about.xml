<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">
    <ImageView android:layout_width="77dp" android:layout_height="71dp"
               android:src="@drawable/app_logo_truck" android:layout_gravity="center_horizontal"
               android:layout_weight="0.26"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/version" android:layout_gravity="center_horizontal"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/what_title" android:text="@string/what_title"
              android:textSize="25dp" android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/what_context" android:text="@string/what_context"
              android:textSize="20dp" android:layout_margin="10dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/how_title" android:text="@string/how_title" android:textSize="25dp"
              android:layout_marginTop="30dp" android:layout_marginLeft="10dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/how_context" android:text="@string/how_context"
              android:textSize="20dp" android:layout_margin="10dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/feedback" android:layout_gravity="right"
            android:layout_marginRight="40dp" android:layout_marginTop="20dp"
            android:onClick="sendfeedback"/>
</LinearLayout>