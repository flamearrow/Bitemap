<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gb.ml.bitemap">
    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:name=".BitemapApplication"
            android:largeHeap="true">
        <activity
                android:name=".MainActivity"
                android:noHistory="true"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ScheduleActivity"/>
        <activity android:name=".AllFoodTrucksActivity"/>
        <activity android:name=".DetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MapActivity"/>
        <activity android:name=".GridViewGalleryActivity"/>
        <activity android:name=".FullScreenImageActivity"/>
        <activity android:name=".SubScheduleActivity"/>
        <activity android:name=".FeedbackActivity"/>
        <activity android:name=".AboutActivity"/>
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>
        <meta-data android:name="com.google.android.maps.v2.API_KEY"
                   android:value="AIzaSyDToV66m7KBNMJjTdpcBRCfjWUWPYvm4lI"/>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
</manifest>
